{% extends "@WEBUI/newUI-Base.html.twig" %}
{% trans_default_domain 'Mealmatch' %}
{#
The simple layout is documented here: @todo
The following 2 blocks are defined and arranged in this template:
    - MAIN_CONTENT
    - MAIN_BOTTOM
Variables used by the template, can be overriden when extended.
#}
{% if viewDataImage is not defined %}{% set viewDataImage %}{{ asset('bundles/uipublic/images/mm/mealmatch_header.jpg') }}{% endset %}{% endif %}
{% if left_icon is not defined %}{% set left_icon %}<span
        class="mm-circle-icon mm-icon-default-circle"></span>{% endset %}{% endif %}
{% if simple_header_title is not defined %}{% set simple_header_title %}{{ viewData.title }}{% endset %}{% endif %}
{# Layout
The simple layout only defines a fixed custom header with flexible image and title!
#}

{% block body %}
    <!--// main_header//-->
    <div class="header-container findmeal-banner">
        <div class="search-sec">
            <h3>{{ simple_header_title }}</h3>
        </div>
    </div>
    <div class="body-content">
        <div class="container container-cust">
            <div class="row">
                <div class="meal-cards">
                    {% block simple_main_content %}
                        <!--// simple/main_content //-->
                        {% if viewData.text is defined %}{{ viewData.text|raw }}{% endif %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    <!--// main_bottom
    Below main_content "anything! can be attached, no layout enforced for main_bottom.
    //-->
    {% block simple_main_bottom %}
        <!--// There is no default for block bottom //-->
    {% endblock %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}