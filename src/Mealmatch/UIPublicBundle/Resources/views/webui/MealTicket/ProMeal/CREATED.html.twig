{% trans_default_domain 'Mealmatch' %}
{% set currencySymbol = 'glyphicon-eur' %}
{% set showCoupon = mm_features.ticket_coupons %}
{% set testEnv = false %}
{% if app_name in ['mealmatch-stage', 'mealmatch-dev'] %}
    {% set testEnv = true %}
{% endif %}
