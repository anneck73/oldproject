{% trans_default_domain 'Mealmatch' %}
<table class="table">
    <thead>
    <tr>
        <th class="th-left" width="90%">{{ 'meal.show.title'|trans }}</th>
        <th class="th-left" width="">{{ 'mealoffer.price.label'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="col-xs-10">
            <p>{{ ticket.number }}</p>
            <p>{{ ticket.basemeal.title }} {{ ticket.basemeal.startdatetime|date('d.m.Y h:i') }}</p>
            <p>{{ ticket.selectedMealOffer.name }}</p>
            <p>{{ ticket.selectedMealOffer.description|raw }}</p>
        </td>
        <td class="col-xs-2 valign-top">{{ ticket.price|number_format(2, ".") }}</td>
    </tr>
    {% if ticket.coupon %}
        <tr>
            <td class="col-xs-10">
                <p>{{ ticket.coupon.title }}</p>
                <p class="">{{ ticket.coupon.description }}</p>
            </td>
            <td class="col-xs-2 valign-top">- {{ ticket.coupon.value|number_format(2, ".") }}</td>
        </tr>
    {% endif %}
    <tr>
        <td class="col-xs-10">
            <p>{{ 'mealticket.taxrate'|trans }} {{ ticket.host.restaurantprofile.taxRate }}% ({{ ticket.price|number_format(2, ".") }} {{ ticket.currency }})</p>
        </td>
        <td class="col-xs-2">{{ (ticket.price * (ticket.host.restaurantprofile.taxRate/100))|number_format(2, ".") }} {{ ticket.currency }}</td>
    </tr>
    </tbody>
</table>
<div class="mm-spacer"></div>