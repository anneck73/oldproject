{% extends '@WEBUI/Layouts/mealmanager_main_layout.html.twig' %}
{% trans_default_domain 'Mealmatch' %}

{% set main_header_title = 'homemeal.manager.show.title'|trans %}
{% set main_header_subtitle = 'homemeal.manager.show.subtitle'|trans %}
{% set main_header_action_path = path('api_homemeal_index') %}
{% set main_header_action_label %}
    <span class="glyphicon glyphicon-backward"></span> {{ 'meal.btn.backto-index.label'|trans }}
{% endset %}


{% block main_content %}
    <div class="container semi-width">
        <div class="row">
            <div class="" aria-labelledby="HomeMealMealModalLabel">
                <div class="meal-preview" role="document">
                    <div class="preview-content">
                        {{ include('@WEBUI/HomeMeal/Card/homemeal.html5.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}