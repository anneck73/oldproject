{% extends "@MMWebFront/Layout/landingpage.html.twig" %}
{% trans_default_domain "Mealmatch" %}
{% set viewData = {'title': 'Meals in ' ~ city} %}
{% block main_content %}
    <div class="breadcrumb">
        <span class="icon-direction"></span>&nbsp;
        <a href="{{ path('public_meals_index') }}">Social-Dining</a> /
        <a href="{{ path('public_meals_country_index', {'country': country|upper}) }}">{{ country|upper }}</a> /
        <a href="{{ path('public_meals_city', {'country': country|upper, 'city': city}) }}">{{ city }}</a>
    </div>

    <div class="pull-right"><span class="label label-danger beta-badge">Beta</span></div>

    <p class="mm-spacer"></p>
    <h2 class="pull-left no-margin">Meals in {{ city }}</h2>
    <p class="mm-spacer"></p>
    <div class="meal-grid pull-left">
        <div class="meal-grid-sizer"></div>
        {% for meal in cityMeals %}
            {% if meal.mealType == 'ProMeal' %}
                {% set proMeal = meal %}
                <div class="meal-grid-item">{{ include('@WEBUI/ProMeal/index.card.include.html.twig') }}</div>
            {% else %}
                {% set homeMeal = meal %}
                <div class="meal-grid-item">{{ include('@WEBUI/HomeMeal/index.card.include.html.twig') }}</div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}