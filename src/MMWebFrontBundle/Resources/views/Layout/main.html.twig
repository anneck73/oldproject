{% extends "@MMWebFront/twbs3-base.html.twig" %}
{% trans_default_domain 'Mealmatch' %}
{#
The main layout is documented here: @todo
the following blocks are defined and arranged in this template: @todo
Variables used by the template, can be overriden when extended.
#}
{% if colLeft is not defined %}{% set colLeft %}col-sm-2 col-xs-12{% endset %}{% endif %}
{% if colRight is not defined %}{% set colRight %}col-sm-10 col-xs-12{% endset %}{% endif %}
{% if viewDataImage is not defined %}{% set viewDataImage %}{{ asset('bundles/mmwebfront/images/mm/mealmatch_header.jpg') }}{% endset %}{% endif %}
{% if viewDataImageXS is not defined %}{% set viewDataImageXS %}{{ asset('bundles/mmwebfront/images/mm/mealmatch_header_xs.jpg') }}{% endset %}{% endif %}
{% if viewData.title is not defined %}{% set viewData = {'title': '<!--// NO VIEW DATA TITLE //-->'} %}{% endif %}
{% if left_icon is not defined %}{% set left_icon %}<span
        class="mm-circle-icon mm-icon-default-circle"></span>{% endset %}{% endif %}
{% if main_header_title is not defined %}{% set main_header_title %}{{ viewData.title }}{% endset %}{% endif %}
{% if main_header_subtitle is not defined %}{% set main_header_subtitle %}MAIN_HEADER_SUB_TITLE{% endset %}{% endif %}
{% if main_header_action_path is not defined %}{% set main_header_action_path %}MAIN_HEADER_ACTION_PATH{% endset %}{% endif %}
{% if main_header_action_label is not defined %}{% set main_header_action_label %}MAIN_HEADER_ACTION_LABEL{% endset %}{% endif %}
{# Layout #}
{% block body %}
    <div class="mm-layout mm-layout-main-header hidden-xs">
        <div class="mm-layout-main-header-box">
            <h1 class="text-center mm-layout-header-title">{{ main_header_title }}</h1>
        </div>
        <img class="img-responsive center-block" src="{{ viewDataImage }}" alt="Mealmatch"/>
        
    </div>
    <div class="mm-layout mm-layout-main-header visible-xs">
        <img class="img-responsive center-block" src="{{ viewDataImage }}" alt="Mealmatch"/>

        <div class="mm-layout-main-action pull-right">
            {% block main_header_action_xs %}
            <!--// No ACTIONS AS OF TODAY //-->
            {% endblock main_header_action_xs %}
        </div>
    </div>

    <div id="mm-content" class=" mm-layout container margin-bottom3">

        <div class="row">
            <div class="{{ colLeft }} mm-layout">
                <div class="mm-layout-main-left">
                    {% block main_left %}
                        <div class="center-block text-center margin-bottom1-5">{{ left_icon }}</div>
                    {% endblock %}
                </div>
            </div>
            <div class="{{ colRight }} mm-layout">
                <div class="mm-layout mm-layout-main-header-title-box">
                    {% block main_header %}
                        
                        <div class="mm-layout-main-action pull-right hidden-xs">
                            {% block main_header_action %}
                                <a href="{{ main_header_action_path }}">
                                    <button class="btn btn-success btn-action">
                                        {{ main_header_action_label }}
                                    </button>
                                </a>
                            {% endblock main_header_action %}
                        </div>

                        <h2 class="no-margin">{{ main_header_title }}</h2>
                        {% if main_header_subtitle is not empty %}
                            <h3 class="margin-bottom1-5">{{ main_header_subtitle }}</h3>
                        {% endif %}
                    {% endblock %}
                </div>
                <div class="mm-layout mm-layout-main-content">
                    {% block main_content %}
                        <div class="mm-text">
                            {% if viewData.text is defined %}{{ viewData.text|raw }}{% endif %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

    
    {% block main_bottom %}
        <!--// There is no default for block bottom //-->
    {% endblock %}
{% endblock body %}