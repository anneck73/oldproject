{% trans_default_domain 'Mealmatch' %}
{% set colLeft %}col-sm-6 col-xs-6{% endset %}
{% set colRight %}col-sm-9 col-xs-9{% endset %}


{{ form_start(form) }}

<div class="form-bg">
    <div class="for-padding">
        {{ form_row(form._token) }}
        <div class="form-group">
            <label>{{ form_label(form.email) }}</label>
            {{ form_widget(form.email, { 'attr' : { 'class': 'tbox' } }) }}
            <div class="form-error">{{ form_errors(form.email) }}</div>
        </div>
        <div class="form-group">
            <label>{{ form_label(form.username) }}</label>
            {{ form_widget(form.username, { 'attr' : { 'class': 'tbox' } }) }}
            <div class="form-error">{{ form_errors(form.username) }}</div>
        </div>
        <div class="form-group">
            <label>{{ form_label(form.plainPassword.first) }}</label>
            {{ form_widget(form.plainPassword.first, { 'attr' : { 'class': 'tbox' } }) }}
            <div class="form-error">{{ form_errors(form.plainPassword.first) }}</div>
        </div>
        <div class="form-group">
            <label>{{ form_label(form.plainPassword.second) }}</label>
            {{ form_widget(form.plainPassword.second, { 'attr' : { 'class': 'tbox' } }) }}
            <div class="form-error">{{ form_errors(form.plainPassword.second) }}</div>
        </div>
        <div class="link-div">
            <div class="form-group">
                {{ form_row(form.termsAccepted) }}
            </div>

            <div class="form-group">
                {{ form_row(form.over18) }}
            </div>
            <div class="form-group">
                <label class="reg-link">
                    <p><a target="_blank" href="{{ path('mm_terms') }}">{{ 'terms.title'|trans }}</a>
                        | <a target="_blank" href="{{ path('mm_mangopay_nutzungsbedingungen') }}">Mangopay-{{ 'terms.title'|trans }}</a></p>

                </label>
            </div>
        </div>
        <div class="button-div text-center">
{#<button type="button" class="main-btn" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>#}
            <button class="main-btn" type="submit" id="_submit" name="_submit">
                {{ 'registration.submit'|trans }}
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}
